<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="920px"
    android:layout_height="360px"
    android:background="#9CA1CC">

    <ImageView
        android:id="@+id/imview_ongoing_request"
        android:layout_width="360px"
        android:layout_height="360px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Created"
        android:textColor="#141B50"
        android:textSize="50px"
        app:layout_constraintStart_toEndOf="@+id/imview_ongoing_request"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_request_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Time stamp"
        android:textColor="#141B50"
        android:textSize="30px"
        app:layout_constraintStart_toEndOf="@+id/imview_ongoing_request"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/tv_request_service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Service Name"
        android:textColor="#141B50"
        android:textSize="50px"
        app:layout_constraintStart_toEndOf="@+id/imview_ongoing_request"
        app:layout_constraintTop_toBottomOf="@+id/tv_request_timestamp" />
</androidx.constraintlayout.widget.ConstraintLayout>